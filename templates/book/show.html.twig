{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}
<div class="show-container">
    <div class="show-header">
        <h1>üìñ Book Details</h1>
        <a href="{{ path('app_dashboard_books') }}" class="btn-base btn-back">‚Üê Back to Library</a>
    </div>

    <div class="book-card">
        <table class="book-details-table">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td><span class="book-id-badge">#{{ book.id }}</span></td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td class="book-title">{{ book.title }}</td>
                </tr>
                <tr>
                    <th>Author</th>
                    <td class="book-author">{{ book.author }}</td>
                </tr>
                <tr>
                    <th>ISBN</th>
                    <td><span class="isbn-code">{{ book.isbn }}</span></td>
                </tr>
                <tr>
                    <th>Pages</th>
                    <td class="pages-info">{{ book.pages }} pages</td>
                </tr>
                <tr>
                    <th>This is a reference book</th>
                    <td class="pages-reference">{{ book.isReference ? 'Yes' : 'No' }} </td>
                </tr>
                <tr>
                    <th>Purchase Date</th>
                    <td class="purchase-date">{{ book.purchaseDate ? book.purchaseDate|date('F j, Y') : 'Not specified' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="action-buttons">
            <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn-base btn-primary btn-update">‚úèÔ∏è Edit Book</a>
        </div>
    </div>
    <div class="actions-card">
        <div class="info-section">
            <p style="color: #7f8c8d; margin: 0; font-style: italic;">
            </p>
        </div>
        <div class="danger-zone">
            <h3>‚ö†Ô∏è Danger Zone</h3>
            {{ include('book/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
