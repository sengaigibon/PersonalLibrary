{% block body %}
<div class="books-container">
    <div class="books-header">
        <h1>üìö Books Library</h1>
        <a href="{{ path('app_book_new') }}" class="btn-base btn-new">+ Add New Book</a>
    </div>

    <table class="table modern-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Pages</th>
                <th>Purchase Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            {% if book is not null and book is not empty %}
            <tr>
                <td>{{ book.id }}</td>
                <td class="book-title">{{ book.title ?? '' }}</td>
                <td class="book-author">{{ book.author ?? '' }}</td>
                <td><span class="isbn-code">{{ book.isbn ?? '' }}</span></td>
                <td>{{ book.pages ?? '' }}</td>
                <td class="purchase-date">{{ book.purchaseDate ? book.purchaseDate|date('Y-m-d') : '' }}</td>
                <td>
                    {% if book.id is not null %}
                    <a href="{{ path('app_book_show', {'id': book.id}) }}" class="action-btn btn-show">üëÅ Show</a>
                    <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="action-btn btn-edit">‚úèÔ∏è Edit</a>
                    <a href="#" class="action-btn btn-start-reading" onclick="startReading({{ book.id }}, '{{ book.title|e('js') }}'); return false;">üìñ Start Reading</a>
                    <a href="#" class="action-btn btn-finish-reading" onclick="finishReading({{ book.id }}, '{{ book.title|e('js') }}'); return false;">‚úÖ Finish Reading</a>
                    {% endif %}
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="7" class="no-records">üìñ No books found. Start building your library!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
