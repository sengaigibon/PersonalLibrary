{% extends 'base.html.twig' %}

{% block title %}ReadLog{% endblock %}

{% block body %}
    <h1>ReadLog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ read_log.id }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ read_log.startDate ? read_log.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>FinishDate</th>
                <td>{{ read_log.finishDate ? read_log.finishDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ read_log.rating }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ read_log.notes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dashboard_reading_log') }}">back to list</a>

    <a href="{{ path('app_read_log_edit', {'id': read_log.id}) }}">edit</a>

    {{ include('log/_delete_form.html.twig') }}
{% endblock %}
