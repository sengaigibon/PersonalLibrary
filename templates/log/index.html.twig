{% extends 'base.html.twig' %}

{% block title %}ReadLog index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/book-styles.css') }}">
{% endblock %}

{% block body %}
<div class="books-container">
    <div class="books-header">
        <h1>üìñ Reading Log</h1>
        <a href="{{ path('app_read_log_new') }}" class="btn-base btn-new">+ Add New Entry</a>
    </div>

    <table class="table modern-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Book</th>
                <th>Start Date</th>
                <th>Finish Date</th>
                <th>Rating</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reaLog in read_logs %}
            {% if reaLog is not null and reaLog is not empty %}
            <tr>
                <td>{{ reaLog.id ?? '' }}</td>
                <td>{{ reaLog.book.title ?? '' }}</td>
                <td class="purchase-date">{{ reaLog.startDate ? reaLog.startDate|date('Y-m-d') : '' }}</td>
                <td class="purchase-date">{{ reaLog.finishDate ? reaLog.finishDate|date('Y-m-d') : '' }}</td>
                <td>
                    {% if reaLog.rating is not null and reaLog.rating > 0 %}
                        {% for i in 1..reaLog.rating %}
                            ‚≠ê
                        {% endfor %}
                    {% else %}
                        <span class="no-rating">No rating</span>
                    {% endif %}
                </td>
                <td>{{ reaLog.notes ?? '' }}</td>
                <td>
                    {% if reaLog.id is not null %}
                    <a href="{{ path('app_read_log_show', {'id': reaLog.id}) }}" class="action-btn btn-show">üëÅ Show</a>
                    <a href="{{ path('app_read_log_edit', {'id': reaLog.id}) }}" class="action-btn btn-edit">‚úèÔ∏è Edit</a>
                    {% endif %}
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="6" class="no-records">üìñ No reading log entries found. Start tracking your reading!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
